@model MyBakeryFinal.ViewModels.Customers.IndexVM
@{}

<h2>Customers</h2>


<table class="table">

    <tr>
        <th style="text-align: center">
            First name
        </th>
        <th style="text-align: center">
            Address
        </th>
        <th style="text-align: center">
            Account Balance
        </th>
        <th style="text-align: center">
            Deluxe Account
        </th>
        <th style="text-align: center">
            Total orders
        </th>
        <th style="text-align: center">
            Date Of Registration
        </th>
        <th style="text-align: center" colspan="2">
            Actions
        </th>
    </tr>

    @foreach (var item in Model.Customers)
    {
        <tr>
            <td style="text-align: center">
                @item.Name
            </td>
            <td style="text-align: center">
                @item.Address
            </td>
            <td style="text-align: center">
                @item.AccountBalance
            </td>
            <td style="text-align: center">
                @item.DeluxeAccount
            </td>
            <td style="text-align: center">
                @item.TotalOrders
            </td>
            <td style="text-align: center">
                @item.RegisteredOn
            </td>

            <td style="text-align: center">
                <a href="/Customers/Edit?id=@item.Id" class="text-primary">Edit</a>
            </td>

            <td style="text-align: center">
                <a href="/Customers/Delete?id=@item.Id" class="text-danger" method="delete" onclick="return confirm('Delete Customer?');">Delete</a>
            </td>
        </tr>
    }

</table>

<div class="d-flex justify-center">
    <a href="/Customers/Add" class="btn-success p-3 py-1">Add +</a>
</div>