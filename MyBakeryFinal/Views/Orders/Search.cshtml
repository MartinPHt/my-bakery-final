<style>
    .search-container {
        margin-bottom: 25px;
        margin-top: 15px;
    }

        .search-container input[type="text"],
        .search-container button {
            vertical-align: middle;
        }

        .search-container input[type="text"] {
            height: 34px;
        }

        .search-container button {
            height: 34px;
            margin-left: 5px;
            margin-right: 5px;
        }
</style>

@model MyBakeryFinal.ViewModels.Orders.SearchVM
@{
}

<h4>Search by order details</h4>

<div class="search-container">
    <form id="searchForm" action="/Orders/Search" method="post" onsubmit="return validateSearchForm()">
        <input type="text" id="firstName" placeholder="Search.." name="firstName">
        <button type="submit" class="btn btn-success p-3 py-1">Search</button>
        <a href="/Orders/Index" class="btn btn-danger p-3 py-1">Reset</a>
    </form>
</div>

<h2>Orders</h2>

<table class="table">

    <tr>
        <th>
            Details
        </th>
        <th>
            Quantity
        </th>
        <th>
            Customer
        </th>
        <th>
            Baker
        </th>
        <th>
            Tip
        </th>
        <th>
            Express delivery
        </th>
        <th>
            Placed On
        </th>
        <th>
            Total
        </th>
    </tr>

    @foreach (var item in Model.Orders)
    {
        <tr>
            <td>
                @item.Details
            </td>
            <td>
                @item.Quantity
            </td>
            <td>
                @item?.Customer?.FirstName @item?.Customer?.LastName
            </td>
            <td>
                @item?.Baker?.FirstName @item?.Baker?.LastName
            </td>
            <td>
                @item?.Tip
            </td>
            @if (item.IsExpress)
            {
                <td>Yes</td>
            }
            else
            {
                <td>No</td>
            }
            <td>
                @item?.PlacedOn
            </td>
            <td>
                @item?.Total
            </td>
            <td>
                <a href="/Orders/Edit?id=@item.Id" class="text-primary">Edit</a>
            </td>
            <td>
                <a href="/Orders/Delete?id=@item.Id" class="text-danger" method="delete" onclick="return confirm('Delete Order?');">Delete</a>
            </td>
        </tr>
    }

</table>

<div class="d-flex justify-center">
    <a href="/Orders/Add" class="btn-success p-3 py-1">Add +</a>
</div>

<script>
    function validateSearchForm() {
        var firstName = document.getElementById("firstName").value;
        if (firstName.trim() === "") {
            alert("Please enter a name to search.");
            return false;
        }
        return true;
    }
</script>