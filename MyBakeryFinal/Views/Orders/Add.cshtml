@using MyBakeryFinal.ViewModels.Orders
@model AddVM
@{
}

<h2> Add Order</h2>

<form action="/Orders/Add" method="post">
    <div>
        <div class="grid">
            <div class="row mb-2">
                <div class="col-2">
                    @Html.LabelFor(m => m.Details)
                </div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.Details)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.Details)
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-2">
                    @Html.LabelFor(m => m.Quantity)
                </div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.Quantity)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.Quantity)
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-2">
                    @Html.LabelFor(m => m.Total)
                </div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.Total)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.Total)
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-2">
                    @Html.LabelFor(m => m.Tip)
                </div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.Tip)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.Tip)
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-2">
                    @Html.LabelFor(m => m.IsExpress)
                </div>
                <div class="col-2">
                    @Html.CheckBoxFor(m => m.IsExpress)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.IsExpress)
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-2">
                    @Html.LabelFor(m => m.Customer_ID)
                </div>
                <div class="col-2">
                    <select id="Customer_ID" name="Customer_ID">
                        @foreach (var customer in Model.Customers)
                        {
                            <option value="@customer.Id">@customer.FirstName @customer.LastName</option>
                        }
                    </select>
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-2">
                    @Html.LabelFor(m => m.Baker_ID)
                </div>
                <div class="col-2">
                    <select id="Baker_ID" name="Baker_ID">
                        @foreach (var baker in Model.Bakers)
                        {
                            <option value="@baker.Id">@baker.FirstName @baker.LastName</option>
                        }
                    </select>
                </div>
            </div>
            <div class="row mb-2">
                <div class="row mb-2">
                    <div class="col-3">
                        @Html.ValidationMessage("summaryError")
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col-2"></div>
                    <div class="col-2">
                        <input type="submit" class="right" value="Save" />
                        <a href="/Orders/Index" class="right">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form> 