@using MyBakeryFinal.ViewModels.Orders
@model EditVM
@{
}

<h2> Edit Order</h2>

<form action="/Orders/Edit" method="post">
    <div>
        <div class="grid">
            @Html.HiddenFor(m => m.Order.Id)
            @Html.HiddenFor(m => m.Order.PlacedOn)
            <div class="row mb-2">
                <div class="col-2">
                    @Html.LabelFor(m => m.Order.Details)
                </div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.Order.Details)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.Order.Details)
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-2">
                    @Html.LabelFor(m => m.Order.Quantity)
                </div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.Order.Quantity)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.Order.Quantity)
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-2">
                    @Html.LabelFor(m => m.Order.Total)
                </div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.Order.Total)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.Order.Total)
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-2">
                    @Html.LabelFor(m => m.Order.Tip)
                </div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.Order.Tip)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.Order.Tip)
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-2">
                    @Html.LabelFor(m => m.Order.IsExpress)
                </div>
                <div class="col-2">
                    @Html.CheckBoxFor(m => m.Order.IsExpress)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.Order.IsExpress)
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-2">
                    @Html.LabelFor(m => m.Order.Customer_ID)
                </div>
                <div class="col-2">
                    @Html.DropDownListFor(m => m.Order.Customer_ID, new SelectList(Model.Customers, "Id", "FullName", Model.Order.Customer_ID), new { @class = "form-control" })
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-2">
                    @Html.LabelFor(m => m.Order.Baker_ID)
                </div>
                <div class="col-2">
                    @Html.DropDownListFor(m => m.Order.Baker_ID, new SelectList(Model.Bakers, "Id", "FullName", Model.Order.Baker_ID), new { @class = "form-control" })
                </div>
            </div>

            <div class="row mb-2">
                <div class="row mb-2">
                    <div class="col-3">
                        @Html.ValidationMessage("summaryError")
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col-2"></div>
                    <div class="col-2">
                        <input type="submit" class="right" value="Save" />
                        <a href="/Orders/Index" class="right">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form> 