@model MyBakeryFinal.ViewModels.Bakers.EditVM
@{
}

<h2> Edit Baker</h2>

<form id="editBakerForm" action="/Bakers/Edit" method="post">
    <div>
        <div class="grid">
            @Html.HiddenFor(m => m.Baker.Id)
            @Html.HiddenFor(m => m.Baker.RegisteredOn)
            <div class="row mb-2">
                <div class="col-1">
                    @Html.LabelFor(m => m.Baker.FirstName)
                </div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.Baker.FirstName, new { @maxlength = "50" })
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.Baker.FirstName)
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-1">
                    @Html.LabelFor(m => m.Baker.LastName)
                </div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.Baker.LastName, new { @maxlength = "50" })
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.Baker.LastName)
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-1">
                    @Html.LabelFor(m => m.Baker.EmailAddress)
                </div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.Baker.EmailAddress, new { @maxlength = "100" })
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.Baker.EmailAddress)
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-1">
                    @Html.LabelFor(m => m.Baker.Salary)
                </div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.Baker.Salary)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.Baker.Salary)
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-1">
                    @Html.LabelFor(m => m.Baker.IsFullTime)
                </div>
                <div class="col-2">
                    @Html.CheckBoxFor(m => m.Baker.IsFullTime)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.Baker.IsFullTime)
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-3">
                    @Html.ValidationMessage("summaryError")
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-1"></div>
                <div class="col-2">
                    <input type="submit" class="right" value="Save" />
                    <a href="/Bakers/Index" class="right">Back</a>
                </div>
            </div>
        </div>
    </div>
</form>

<script>
    document.getElementById('editBakerForm').addEventListener('submit', function (event) {
        let isValid = true;

        const firstName = document.querySelector('input[name="Baker.FirstName"]');
        const lastName = document.querySelector('input[name="Baker.LastName"]');
        const address = document.querySelector('input[name="Baker.EmailAddress"]');
        const accountBalance = document.querySelector('input[name="Baker.Salary"]');

        if (!firstName.value.trim()) {
            isValid = false;
            alert('First Name is required.');
            firstName.focus();
            event.preventDefault();
            return false;
        }

        if (!lastName.value.trim()) {
            isValid = false;
            alert('Last Name is required.');
            lastName.focus();
            event.preventDefault();
            return false;
        }

        if (!address.value.trim()) {
            isValid = false;
            alert('Email Address is required.');
            address.focus();
            event.preventDefault();
            return false;
        }

        if (!accountBalance.value.trim()) {
            isValid = false;
            alert('Salary is required.');
            accountBalance.focus();
            event.preventDefault();
            return false;
        }

        if (isNaN(accountBalance.value) || !accountBalance.value.match(/^\d+(\.\d+)?$/)) {
            isValid = false;
            alert('Salary must be a valid number.');
            accountBalance.focus();
            event.preventDefault();
            return false;
        }

        return isValid;
    });
</script>